@model IEnumerable<FitnessViewer.Infrastructure.Models.Dto.RunningTimesDto>
<h4>Best Running Times</h4>
<div class="table-responsive">
    <table class="table table-striped table-condensed">
        <tr>
            <th>Distance</th>
            <th>Time</th>
            <th>Average Pace</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.DistanceName</td>
                <td>@p.Time</td>
                <td>@p.AveragePace</td>
                <td>@Html.ActionLink(p.ActivityName.ToString(), "ViewActivity", "Activity", new { Id = p.ActivityId }, null)</td>
                <td>@p.ActivityDate.ToShortDateString()</td>
            </tr>
        }
    </table>
</div>
