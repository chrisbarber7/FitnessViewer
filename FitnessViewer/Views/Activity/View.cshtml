@model FitnessViewer.ViewModels.ActivityViewModel
@{
    ViewBag.Title = "Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("activityId", Model.Id)

<h1>@Model.Name</h1>

<style>

    .summaryBox{
 border-style: solid;
    border-color: #c0ef95;
    border-width: 1px;
    background-color:#f6feee;
    }

    .SummaryTitle {
        font-size: 11px;   

        text-align: center;
    }



    .SummaryValue {
        font-size: 24px;
        text-align: center;
         font-weight:700;
        
    }
</style>
<div class="row">

    <div class="col-md-2">
        <div class="summaryBox">
            <div class="SummaryValue">@Model.Distance</div>
            <div class="SummaryTitle">Distance (mi)</div>
        </div>

    </div>
    <div class="col-md-2">
        <div class="summaryBox">
            <div class="SummaryValue">@Model.ElapsedTime</div>
            <div class="SummaryTitle">Time</div>
            </div>
        </div>
    <div class="col-md-2">
        <div class="summaryBox">
            <div class="SummaryValue">00:00</div>
            <div class="SummaryTitle">Pace</div>
        </div>
        </div>
    <div class="col-md-2">
        <div class="summaryBox">
            <div class="SummaryValue">@Model.ElevationGain</div>
            <div class="SummaryTitle">Elevation</div>
        </div>
        </div>
    <div class="col-md-2">
        <div class="summaryBox">
            <div class="SummaryValue">54</div>
            <div class="SummaryTitle">Suffer Score</div>
        </div>
        </div>
    <div class="col-md-2">
        <div class="summaryBox">
            <div class="SummaryValue">12323</div>
            <div class="SummaryTitle">Calories</div>
        </div>
        </div>

</div>

<style>
    .map {
        height: 500px;
    }
</style>
<div class="row">
    <div class="col-md-6"></div>
    <div id="map" class="col-md-6 map"></div>
</div>
@*<div id="map" style="height:500px;width:500px"></div>*@

<script src="~/Scripts/app/Controllers/athleteViewController.js" type="text/javascript"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyARW8zp-dKOLcnloYsY13dRLHjKEkbA5wk&callback=initActivityMap">

</script>


